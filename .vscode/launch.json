    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rv32jit'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rv32jit",
                    "--package=rv32jit"
                ],
                "filter": {
                    "name": "rv32jit",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "windows": {
                "env": {
                    "CARGO_MANIFEST_DIR": "${workspaceFolder}",
                    // Change this to the path of SDL2.dll if you need to debug the program under Windows.
                    "PATH": "${env:USERPROFILE}\\.rustup\\toolchains\\nightly-x86_64-pc-windows-msvc\\lib\\rustlib\\x86_64-pc-windows-msvc\\lib;${workspaceFolder}/target/debug/deps;${env:PATH}",
                },
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rv32jit'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rv32jit",
                    "--package=rv32jit"
                ],
                "filter": {
                    "name": "rv32jit",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}